@model DragonGame.Models.Character
@{
    ViewData["Title"] = "Your Character";
}

<h2>Your Character</h2>

{{-- Image for the selected look and pose --}}
<div class="avatar" style="position: relative; width: 200px; height: 200px; margin: 2rem auto;">
    <img src="~/images/base.png" alt="Base" />
    <img src="~/images/hair/@Model.Hair" alt="Hair" />
    <img src="~/images/faces/@Model.Face" alt="Face" />
    <img src="~/images/clothes/@Model.Clothing" alt="Clothing" />

    <img id="poseImage" src="" alt="Pose" style="position: absolute; top: 0; left: 0; display: none;" />
</div>

{{-- section for pose selection --}}
<div class="container text-center mt-4">
    <h3>Select a Pose</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-group">
                <label for="poseDropdown">Choose a Pose:</label>
                <select id="poseDropdown" class="form-control">
                    <option value="">-- Select a Pose --</option>
                    {{-- Options will be loaded here by JavaScript --}}
                </select>
            </div>
        </div>
    </div>
</div>






<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Restart</button>
</form>

@section Scripts {
    <script src="~/js/poseSelector.js"></script>
}