@model DragonGame.Models.Character
@{
    ViewData["Title"] = "Your Character";
}

<h2>Your Character</h2>

<div class="avatar" style="position: relative; width: 200px; height: 200px; margin: 2rem auto;">
    <img src="~/images/base.png" alt="Base" />
    <img src="~/images/hair/@Model.Hair" alt="Hair" />
    <img src="~/images/faces/@Model.Face" alt="Face" />
    <img src="~/images/clothes/@Model.Clothing" alt="Clothing" />
    
    <img id="poseImage" 
         src="@(Model.Pose != null ? "/images/poses/" + Model.Pose.ImageUrl : "")" 
         alt="Pose" 
         style="position: absolute; top: 0; left: 0; @(Model.Pose != null ? "" : "display: none;"); width: 100%; height: 100%;" />
</div>


<form asp-action="UpdateCharacterPose" asp-controller="Character" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="container text-center mt-4">
        <h3>Select a Pose</h3>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="poseDropdown">Choose a Pose:</label>
                    <select id="poseDropdown" name="selectedPoseId" class="form-control">
                        <option value="">-- Select a Pose --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Save Character</button>
        </div>
    </div>
</form>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Restart</button>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    

    <script>
        var initialCharacterData = {
            id: @Model.Id,
            // Ensure poseId is correctly handled for null values
            poseId: @(Model.PoseId.HasValue ? Model.PoseId.Value.ToString() : "null")
        };
    </script>

    <script src="~/js/poseSelector.js"></script>
    <script src="~/js/CharacterCreator.js"></script> 
}